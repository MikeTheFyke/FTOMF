    <div id="sun-container">
        <img src="/public/images/sunMap.png" id="sun-map">
    </div>


    <div id="mercury-container">
        <img src="/public/images/mercuryMap.png" id="mercury-map">
    </div>

    <div id="venus-container">
        <img src="/public/images/venusMap.png" id="venus-map">
    </div>

    <div id="terra-container">
        <div id="terra-beta2">
            <img src="/public/images/moonMap.png" id="moon-map2" alt="">
